{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
          "label": "Run Python",
          "type": "shell",
          "command": "cd '${fileDirname}'; python '${file}'",
          "problemMatcher": [],
          "group": {
            "kind": "build",
            "isDefault": true
          }
        },
        {
          "label": "Run LaTeX",
          "type": "shell",
          "command": "/Library/TeX/texbin/pdflatex '${relativeFile}' && open -a Skim.app ${fileBasename}.pdf",
          "problemMatcher": [],
        },
        {
            "label": "Clear LaTeX",
            "type": "shell",
            "command": "rm -f 'assignment.aux'",
            "problemMatcher": []
        },
        {
            "label": "LaTeX bibliography",
            "type": "shell",
            "command": "/Library/TeX/texbin/bibtex assignment",
            "problemMatcher": []
        }
    ]
}
